{
  "name": "orign-assignment",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "repository": "https://github.com/grzegorzmoskal/webapp-boilerplate",
  "scripts": {
    "start": "npx poi --require ts-node/register --config poi.config.js",
    "build": "npx poi build --require ts-node/register --config poi.config.js ",
    "test:e2e": "npx cypress run --reporter json",
    "test:unit": "npx jest",
    "test": "npm run test:unit",
    "lint": "npx tslint --project tsconfig.json  --format stylish",
    "cypress:run": "npx cypress run",
    "cypress:open": "npx cypress open"
  },
  "dependencies": {
    "history": "4.7.2",
    "react": "16.4.1",
    "react-dom": "16.4.1",
    "react-redux": "5.0.7",
    "react-router-dom": "4.3.1",
    "react-router-redux": "5.0.0-alpha.6",
    "redux": "3.7.2",
    "redux-loop": "4.2.6"
  },
  "devDependencies": {
    "offline-plugin": "5.0.5",
    "@types/enzyme": "3.1.14",
    "@types/enzyme-adapter-react-16": "1.0.2",
    "@types/history": "4.6.2",
    "@types/jest": "22.2.3",
    "@types/react": "16.3.14",
    "@types/react-dom": "16.0.6",
    "@types/react-redux": "5.0.19",
    "@types/react-router-dom": "4.2.6",
    "@types/react-router-redux": "5.0.2",
    "awesome-typescript-loader": "5.0.0",
    "cypress": "3.1.0",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "husky": "0.15.0-rc.8",
    "identity-obj-proxy": "3.0.0",
    "jest": "22.4.3",
    "jest-css-modules": "1.1.0",
    "jest-localstorage-mock": "2.2.0",
    "lint-staged": "7.1.0",
    "node-sass": "4.9.0",
    "poi": "9.6.13",
    "poi-preset-react": "9.2.1",
    "poi-preset-typescript": "9.0.2",
    "prettier": "1.12.1",
    "sass-loader": "6.0.7",
    "ts-jest": "22.4.5",
    "ts-node": "5.0.1",
    "tslint": "5.10.0",
    "tslint-config-prettier": "1.13.0",
    "tslint-consistent-codestyle": "1.13.1",
    "tslint-plugin-prettier": "1.3.0",
    "typescript": "3.1.1",
    "kitimat": "0.1.8",
    "kitimat-jest": "0.1.8"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "<rootDir>/src/**/*.spec.(ts|tsx)"
    ],
    "setupFiles": [
      "<rootDir>/src/test/setupTests.ts",
      "jest-localstorage-mock"
    ],
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy",
      "@/(.*)": "<rootDir>/src/$1",
      "^.+\\.scss$": "<rootDir>/src/test/stub.ts",
      "\\.(css|jpg|png|svg)$": "<rootDir>/node_modules/jest-css-modules"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm test && npm run test:e2e"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npx prettier --config .prettierrc --write",
      "git add"
    ]
  }
}
